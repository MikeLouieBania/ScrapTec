// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String        @id @default(auto()) @map("_id") @db.ObjectId 
  email     String        @unique
  password  String?
  usertype  String?
  student   Student_Info?
}

model Student_Info {
  id            String     @id @default(auto()) @map("_id") @db.ObjectId 
  userId        String    @unique
  lastname      String?
  firstname     String?
  middlename    String?
  address       String?
  city          String?
  region        String? 
  zipcode       String? 
  birthdate     DateTime   @map("birthdate")
  gender        String?
  civil_status  String?
  hobby         String[]
  user          User?      @relation(fields: [userId], references: [id])
}

model Log {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  action     String
  email      String
  timestamp  DateTime @default(now())
}