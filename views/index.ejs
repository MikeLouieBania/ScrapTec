    <!-- Custom CSS for body background -->
    <style>
      html {
        scroll-behavior: smooth;
      }
    </style>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const modal = document.getElementById("modalWindow");
        const span = document.getElementsByClassName("close")[0];
        const modalText = document.getElementById("modalText");

        document.querySelectorAll('.pillar').forEach(function (element) {
          element.addEventListener('click', function () {
            if (element.id === 'reduce') {
              modalText.innerHTML = `
                <h2>Reduce</h2>
                <h3>Smart Buying Choices:</h3>
                <ul>
                    <li>• Choose electronics with longer lifespans and upgradeable components.</li>
                    <li>• Prioritize products made from sustainable or recycled materials.</li>
                </ul>
                <h3>Extend Device Lifespan:</h3>
                <ul>
                    <li>• Maintain and repair your devices to prolong their usability.</li>
                    <li>• Update software rather than buying new hardware when possible.</li>
                </ul>
                <h3>Don't Rush to Dispose:</h3>
                <ul>
                    <li>• Only dispose of items when they are beyond repair or reuse.</li>
                </ul>`;
            } else if (element.id === 'recover') {
              modalText.innerHTML = `
                <h2>Recover</h2>
                <h3>Donate or Sell:</h3>
                <ul>
                    <li>• Give away still-functional electronics to those who may need them.</li>
                    <li>• Consider selling your electronics for parts or as refurbished items.</li>
                </ul>
                <h3>Data & Component Recovery:</h3>
                <ul>
                    <li>• Recover important data before disposing of devices.</li>
                    <li>• Some electronic components can be reused in other devices.</li>
                </ul>
                <h3>Support Recovery Programs:</h3>
                <ul>
                    <li>• Contribute to or volunteer in programs that aim to recover usable parts from old electronics.</li>
                </ul>`;
            } else if (element.id === 'recycle') {
              modalText.innerHTML = `
                  <h2>Recycle</h2>
                  <h3>Find a Local Recycling Facility:</h3>
                  <ul>
                    <li>• Use our locator tool to find certified e-waste recycling centers near you.</li>
                  </ul>
                  <h3>Participate in Collection Drives:</h3>
                  <ul>
                    <li>• Join or organize e-waste collection events in your community or workplace.</li>
                  </ul>
                  <h3>Know the Guidelines:</h3>
                  <ul>
                    <li>• Learn how to properly sort and prepare e-waste for recycling.</li>
                  </ul>`;
            }
            modal.style.display = "block";
          });
        });

        span.onclick = function () {
          modal.style.display = "none";
        }

        window.onclick = function (event) {
          if (event.target == modal) {
            modal.style.display = "none";
          }
        }
      });

      document.addEventListener('DOMContentLoaded', function () {
        const observer = new IntersectionObserver(function (entries) {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              entry.target.classList.add('info-box-animate');
            } else {
              entry.target.classList.remove('info-box-animate');
            }
          });
        });

        document.querySelectorAll('#organization .info-box').forEach(box => {
          observer.observe(box);
        });
      });

      $(function () {
        // Make the chat icon draggable
        $("#chatIcon").draggable();
      });

      document.addEventListener('DOMContentLoaded', function () {
        const chatbotContainer = document.getElementById('chatbotContainer');
        const closeChatbot = document.getElementById('closeChatbot');
        const sendButton = document.querySelector('.chatbot-send');
        const resetButton = document.getElementById('resetChatbotInput');
        const inputField = document.getElementById('chatbotInput');
        const chatContent = document.getElementById('chatbotContent');

        // Function to simulate typing indicator
        function showTypingIndicator() {
          const typingIndicator = document.createElement('div');
          typingIndicator.classList.add('chat-message', 'bot');
          typingIndicator.textContent = '...';
          chatContent.appendChild(typingIndicator);
          return typingIndicator;
        }

        // Function to display a message in the chat
        function displayMessage(message, sender = 'bot') {
          const chatMessage = document.createElement('div');
          chatMessage.classList.add('chat-message', sender);
          chatMessage.textContent = message;
          chatContent.appendChild(chatMessage);
          chatContent.scrollTop = chatContent.scrollHeight;
        }

        // Function to display quick reply options
        function displayQuickReplies(options) {
          const repliesContainer = document.createElement('div');
          repliesContainer.classList.add('quick-replies');
          options.forEach(option => {
            const replyButton = document.createElement('button');
            replyButton.textContent = option;
            replyButton.classList.add('quick-reply');
            replyButton.onclick = () => handleQuickReply(option);
            repliesContainer.appendChild(replyButton);
          });
          chatContent.appendChild(repliesContainer);
        }

        // Function to display follow-up questions with quick replies
        function displayFollowUpQuestion(question, options) {
          displayMessage(question, 'bot');
          displayQuickReplies(options);
        }

        // Handle quick reply selection
        function handleQuickReply(reply) {
          processUserInput(reply);
          document.querySelector('.quick-replies').remove();
        }

        // Function to process user input and respond accordingly
        function processUserInput(userInput) {
          displayMessage(userInput, 'user');
          const typingIndicator = showTypingIndicator();

          setTimeout(() => {
            chatContent.removeChild(typingIndicator);
            // Custom responses and follow-up questions based on user input
            switch (userInput.toLowerCase()) {
              case 'what the system is about':
                displayMessage("E-Waste Zero is a web-based platform designed to expedite sustainable technology preservation. We connect individuals, businesses, and organizations in the lifecycle of sustainable technology.");
                displayFollowUpQuestion("Would you like to know more about our mission or ongoing projects?", ["Our Mission", "Ongoing Projects", "No, Thank You"]);
                break;
              case 'our mission':
                displayMessage("Our mission is to lead the global movement in reducing electronic waste by promoting responsible recycling, reuse, and disposal practices.");
                displayFollowUpQuestion("Interested in our vision or values?", ["Our Vision", "Our Values", "No, Thank You"]);
                break;
              case 'ongoing projects':
                displayMessage("We are currently working on e-waste collection drives and educational programs, and engaging in our Marketplace.");
                displayFollowUpQuestion("Would you like to learn more about our Marketplace or how to participate in our projects?", ["Marketplace Details", "Participation in Projects", "No, Thank You"]);
                break;
              case 'our vision':
                displayMessage("Our vision is a world where electronic products are sustainably produced, consumed, and recycled, ensuring a circular lifecycle.");
                break;
              case 'our values':
                displayMessage("We value integrity, sustainability, and community engagement.");
                break;
              case 'how to register':
                displayMessage("Organizations can register by providing their SEC Number and necessary documents like TIN or BIR files. After a verification process, they'll receive an email about their registration status.");
                displayFollowUpQuestion("Need more details on the registration process or how to donate after registering?", ["Registration Details", "Donation Process", "No, Thank You"]);
                break;
              case 'registration details':
                displayMessage("To register, visit our registration page and provide your organization's details, including SEC Number and required documents. Our team will review and verify your submission.");
                break;
              case 'donation process':
                displayMessage("After registering, choose a drop point for your donation, fill out the donation form, and deliver your donation. You'll earn points for successful donations.");
                displayFollowUpQuestion("Interested in learning about drop point details or point redemption?", ["Drop Point Details", "Point Redemption", "No, Thank You"]);
                break;
              case 'drop point details':
                displayMessage("Each drop point has its address, assigned manager, and operating hours. You can choose the most convenient one for your donation.");
                break;
              case 'point redemption':
                displayMessage("Earned points can be redeemed for making advertisements in selected cities or areas with registered users.");
                break;
              case 'benefits of the system':
                displayMessage("Benefits include efficient e-waste management, earning points through donations, and participating in an eco-friendly marketplace.");
                displayFollowUpQuestion("Interested in specific benefits for organizations or individual users?", ["Organization Benefits", "User Benefits", "No, Thank You"]);
                break;
              case 'organization benefits':
                displayMessage("Organizations benefit through increased visibility, efficient e-waste disposal, and earning points for advertisements.");
                break;
              case 'user benefits':
                displayMessage("Individual users benefit by accessing our marketplace to buy, sell, or exchange electronics in an eco-friendly way.");
                break;
              case 'how do i participate':
                displayMessage("Users can participate by registering, logging in, and engaging in our marketplace to buy or sell electronics in an eco-friendly way.");
                displayFollowUpQuestion("Would you like to know about marketplace details or other ways to participate?", ["Marketplace Details", "Other Participation Ways", "No, Thank You"]);
                break;
              case 'marketplace details':
                displayMessage("Join our marketplace to buy, sell, or exchange electronics. Contribute to sustainability while getting the best deals.");
                break;
              case 'other participation ways':
                displayMessage("Apart from the marketplace, you can participate in our collection drives, educational programs, and provide feedback for continuous improvement.");
                break;
              case 'participation in projects':
                displayMessage("You can participate in our projects by joining our e-waste collection drives, attending educational programs, or engaging in our marketplace.");
                break;
              case 'no, thank you':
                displayMessage("Alright, if you have any other questions or need assistance, feel free to ask!");
                break;
              case 'what is the purpose':
                displayMessage("The purpose of E-Waste Zero is to minimize e-waste and maximize sustainability by connecting various stakeholders in the lifecycle of sustainable technology.");
                displayFollowUpQuestion("Would you like to know more about our specific projects or how you can contribute?", ["About Projects", "How to Contribute", "No, Thank You"]);
                break;
              case 'how to donate':
                displayMessage("Organizations can donate by selecting a drop point, filling out the donation form, and delivering their e-waste. This process contributes to efficient e-waste management.");
                displayFollowUpQuestion("Need more details on the donation process or how your donations help?", ["Donation Process Details", "Impact of Donations", "No, Thank You"]);
                break;
              case 'donation process details':
                displayMessage("To donate, log in to your account, choose a drop point, fill out the necessary details in the donation form, and arrange for the delivery of your e-waste.");
                break;
              case 'impact of donations':
                displayMessage("Your donations help in reducing e-waste, promoting recycling and reuse, and contribute to a sustainable digital future.");
                break;

              // ... other cases ...
              default:
                displayMessage("I'm not sure how to respond to that. Can you please rephrase?");
                displayQuickReplies([
                  "What the system is about",
                  "How to register",
                  "How to donate",
                  "Participation in Projects",
                  "More Information"
                ]);
            }
          }, 1500);
        }

        // Display initial greeting and options
        function displayInitialGreeting() {
          displayMessage("Welcome! How can I assist you today?");
          displayQuickReplies([
            "What the system is about",
            "What is the purpose",
            "How to register",
            "How to donate",
            "Benefits of the system",
            "How do I participate"
          ]);
        }

        // Event listeners for send and reset buttons
        sendButton.addEventListener('click', function () {
          const userMessage = inputField.value.trim();
          if (userMessage !== '') {
            processUserInput(userMessage);
            inputField.value = '';
          }
        });

        resetButton.addEventListener('click', function () {
          chatContent.innerHTML = '';
          displayInitialGreeting();
        });

        // Event listeners for showing/hiding the chatbot
        const chatIcon = document.getElementById('chatIcon'); // Ensure this element exists
        chatIcon.onclick = () => chatbotContainer.style.display = 'block';
        closeChatbot.onclick = () => chatbotContainer.style.display = 'none';

        // Display the initial greeting when the chatbot loads
        displayInitialGreeting();
      });


    </script>
