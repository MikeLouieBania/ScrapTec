<!DOCTYPE html>
<html>
<head>
    <title>Advertise in <%= city.name %></title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/organization/dashboard">Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">  
                <li class="nav-item">
                <a class="nav-link" href="/organization/donationsList">Donations</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/organization/pledgeBasket">Pledge Basket</a>
                </li>  
                <li class="nav-item">
                <a class="nav-link" href="/organization/faq">FAQ</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/organization/account">Account</a>
                </li>
            </ul> 
            <form class="form-inline my-2 my-lg-0" method="post" action="/organization/logout">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Logout</button>
            </form>
        </div>
    </nav>
    
    <div class="container mt-4">
        <div class="row">
            <div class="col-md-8">
                <h2>Advertise in <%= city.name %></h2>
                <p class="lead">Reach out to potential users by advertising in this city!</p>
        
                <!-- Required Points Display -->
                <p class="text-info">Required Points to Advertise: <%= city.requiredPoints %></p>
                
                <form action="/submitAdvertisement" method="post" enctype="multipart/form-data">
                    <input type="hidden" name="cityId" value="<%= city.id %>">
                    
                    <!-- Title -->
                    <div class="form-group">
                        <label for="adTitle">Advertisement Title:</label>
                        <input type="text" class="form-control" id="adTitle" name="title" required>
                    </div>
                
                    <!-- Content -->
                    <div class="form-group">
                        <label for="adContent">Advertisement Content:</label>
                        <textarea class="form-control" id="adContent" name="content" required></textarea>
                    </div>
                
                    <!-- Points Spent -->
                    <div class="form-group">
                        <label for="pointsSpent">Points Spent:</label>
                        <input type="number" class="form-control" id="pointsSpent" name="pointsSpent" required>
                    </div>
                
                    <!-- Link -->
                    <div class="form-group">
                        <label for="adLink">Link:</label>
                        <input type="url" class="form-control" id="adLink" name="link">
                    </div>
                
                    <!-- Image Upload -->
                    <div class="form-group">
                        <label for="adImage">Advertisement Image:</label>
                        <input type="file" class="form-control-file" id="adImage" name="imageUrl">
                    </div> 
                
                    <!-- Advertisement Plan -->
                    <div class="form-group">
                        <label for="adPlan">Advertisement Plan:</label>
                        <select class="form-control" id="adPlan" name="adPlan" required>
                            <option value="basic">Basic Ad (1 week) - 10 points</option>
                            <option value="premium">Premium Ad (2 weeks with featured placement) - 20 points</option>
                        </select>
                    </div>
                
                    <button type="submit" class="btn btn-primary">Submit Advertisement</button>
                </form>
                
            </div>
            
            <div class="col-md-4">
                <h4>Previous Advertisements:</h4>
                <% if(city.advertisements && city.advertisements.length > 0) { %>
                    <ul class="list-group">
                        <% city.advertisements.slice(0,5).forEach(ad => { %> <!-- Displaying the top 5 latest ads -->
                            <li class="list-group-item">
                                <strong><%= ad.title %></strong><br>
                                <% if(ad.isActive) { %>
                                    <span class="badge badge-success">Active</span>
                                <% } else { %>
                                    <span class="badge badge-secondary">Expired</span>
                                <% } %>
                            </li>
                        <% }) %>
                    </ul>
                <% } else { %>
                    <p>No advertisements yet for this city.</p>
                <% } %>
            </div>
        </div>
        
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
