  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  transition: background-color 0.3s;
  margin-right: 20px;
  font-weight: bold;
  color: white !important;
  font-family: 'Roboto Slab', serif,;
}

.btn-outline-success:hover {
  background-color: #6082B6 !important;
  color: #fff !important;
  text-decoration: none;
