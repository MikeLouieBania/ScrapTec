<!DOCTYPE html>
<html>

<head>
    <title>Pledge Basket</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Poppins', sans-serif;
          }
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Navigation Bar Styles */
    .navbar.navbar-expand-lg.navbar-light.bg-light {
        background-color: #333333 !important;
        padding: 10px 0;
    }


    .nav-link {
        color: white !important;
        font-family: 'Roboto Slab', serif,;
        font-weight: bold;
        font-size: 16px;
        margin-top: 15px;
    }

    .navbar-brand {
        color: white !important;
        font-family: 'Roboto Slab', serif,;
        font-weight: bold;
        font-size: 16px;
        margin-top: 1px; /* Align with .nav-link */
        margin-left: 15px;
    }

    .navbar-light .navbar-toggler-icon {
        background-color: #333333;
    }

    /* Custom Logout Button Style */
    .btn-outline-success {
        background-color: #5072A7 !important;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        transition: background-color 0.3s;
        margin-right: 20px;
        font-weight: bold;
        color: white !important;
        font-family: 'Roboto Slab', serif,;
    }

    .btn-outline-success:hover {
        background-color: #6082B6 !important;
        color: #fff !important;
        text-decoration: none;
    }

    /* Body */
    body {
        padding-top: 0px;
        margin-bottom: 60px;
    }

    /* Additional Styles for Navigation Links */
    .nav-link {
        display: block;
        padding: 15px;
        text-decoration: none;
        color: white !important;
        font-weight: bold;
        text-transform: uppercase;
        margin: 0 10px;
        position: relative;
        transition: all .5s;
    }


    .nav-link::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        right: 0;
        height: 2px;
        background-color: white;
        transform: scaleX(0);
        transition: transform 0.5s;
    }

    .nav-link:hover::after {
        transform: scaleX(1);
    }


/* Table Styling */
.table {
    width: 100%;
    margin-bottom: 1rem;
    color: #212529;
    overflow-x: auto; /* Ensures content is accessible even on smaller screens */
  }
  
  .table-responsive .table {
    width: 100%;
    margin-bottom: 1rem;
    color: #212529;
  }
  
  /* Table Header Styling */
  .table thead th {
    vertical-align: middle;
    border-bottom: 2px solid #dee2e6;
    background-color: #f8f9fa;
    padding: 1rem;
    text-align: center;
    font-weight: bold;
    color: #495057;
  }
  
  /* Table Body Styling */
  .table tbody td {
    padding: 1rem;
    vertical-align: middle;
    text-align: center;
    border-top: 1px solid #dee2e6;
  }
  
  /* Zebra Striping for rows */
  .table tbody tr:nth-child(odd) {
    background-color: #f9f9f9;
  }
  
  /* Hover effect for rows */
  .table tbody tr:hover {
    background-color: #eef6fc;
  }

        /* Responsive adjustments */
        @media (max-width: 768px) {
        .navbar-brand, .nav-link, .btn-outline-success {
            font-size: 14px; /* Smaller font size for better readability */
            
        }

        .table thead th, .table tbody td {
            padding: 0.5rem; /* Smaller padding for table cells */
        }
    }

         @media (max-width: 576px) {
        .navbar-nav {
            margin-top: 10px; /* Adjust navbar for smaller screens */
        }

        .nav-link {
            padding: 10px; /* Smaller padding for nav links */
            font-size: 14px; /* Smaller font size for nav links */
        }

        .table {
            font-size: 14px; /* Smaller font size for table */
        }
    }
    
        
    </style>
</head>

<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/organization/dashboard">DASHBOARD</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">  
                <li class="nav-item">
                <a class="nav-link" href="/organization/donationsList">Donations</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/organization/pledgeBasket">Pledge Basket</a>
                </li>  
                <li class="nav-item">
                <a class="nav-link" href="/organization/faq">FAQ</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="/organization/account">Account</a>
                </li>
            </ul> 
            <form class="form-inline my-2 my-lg-0" method="post" action="/organization/logout">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">LOGOUT</button>
            </form>
        </div>
    </nav>


    <div class="container">
        <h3>Your Pledge Basket</h3>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Drop Point</th>
                    <th>Details</th>
                    <th>Attainable Points</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% donations.forEach(donation => { %>
                    <tr data-toggle="collapse" data-target="#donation-<%= donation.id %>" class="accordion-toggle">
                        <td><%= donation.dropPoint.name %></td>
                        <td>Click to see peripherals</td> 
                        <td><%= donation.points %></td>
                        <td>
                            <form action="/organization/donationForm" method="POST">
                                <input type="hidden" name="dropPointId" value="<%= donation.dropPoint.id %>">
                                <button type="submit" class="btn btn-sm btn-secondary">Add More Items</button>
                            </form>
                            <!-- Before the Confirm Donations button -->
                            <form action="/organization/confirmDonation" method="POST">
                                <!-- Hidden input for donation ID -->
                                <input type="hidden" name="donationId" value="<%= donation.id %>">
                                <div class="mb-3">
                                    <label for="expectedDateOfArrival" class="form-label">Expected Date of Arrival:</label>
                                    <input type="date" class="form-control" id="expectedDateOfArrival" name="expectedDateOfArrival" required>
                                </div>
    
                                <!-- Confirmation -->
                                <div class="d-flex justify-content-end">
                                    <button type="submit" class="btn btn-success">Confirm Donations</button>
                                </div>
                            </form>
                            
                            <br>
                            <!-- Delete Donation -->
                            <form action="/organization/deleteDonation/<%= donation.id %>" method="POST" onsubmit="return confirmDelete()">
                                <button type="submit" class="btn btn-sm btn-danger">Delete Donation</button>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="6" class="hiddenRow">
                            <div class="collapse" id="donation-<%= donation.id %>">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Peripheral Type</th>
                                            <th>Brand</th>
                                            <th>Model</th>
                                            <th>Condition</th>
                                            <th>Quantity</th>
                                            <th colspan="2">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% donation.peripherals.forEach(peripheral => { %>
                                            <tr>
                                                <td><%= peripheral.type %></td>
                                                <td><%= peripheral.brand %></td>
                                                <td><%= peripheral.model %></td>
                                                <form action="/organization/editPeripheral/<%= peripheral.id %>" method="POST">
                                                    <td>
                                                        <select name="condition" class="form-control">
                                                            <option value="New" <%= peripheral.condition === 'New' ? 'selected' : '' %>>New</option>
                                                            <option value="Used but Working" <%= peripheral.condition === 'Used but Working' ? 'selected' : '' %>>Used but Working</option>
                                                            <option value="Not Working" <%= peripheral.condition === 'Not Working' ? 'selected' : '' %>>Not Working</option>
                                                            <!-- Add more condition options as needed -->
                                                        </select>
                                                    </td>
                                                    <td>
                                                        <input type="number" name="quantity" class="form-control" value="<%= peripheral.quantity %>">
                                                    </td>
                                                    <td>
                                                        <button type="submit" class="btn btn-sm btn-warning">Update</button>
                                                    </td>
                                                </form>
                                                <td> 
                                                    <form action="/organization/deletePeripheral/<%= peripheral.id %>" method="POST">
                                                        <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                                    </form> 
                                                </td>
                                            </tr>
                                        <% }); %> 
                                    </tbody>
                                </table>
                            </div>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

    </div>

     <!-- Load Bootstrap JS (you can also include jQuery for additional functionality) -->
     <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
     <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this donation? This action cannot be undone.');
        }
    </script>
</body>

</html>
