<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Account | Marketplace</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #f4f7fa;
            margin-top: 20px;
        }
        .navbar {
            background-color: #fff;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .container {
            background-color: #fff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 2px 4px rgba(0,0,0,.1);
        }
        .profile-img {
            max-width: 100%; /* Ensure the image is no wider than the container */
            max-height: 100%; /* Ensure the image is no taller than the container */
            height: auto; /* Maintain aspect ratio */
            width: auto; /* Maintain aspect ratio */
            border-radius: 50%;
            overflow: hidden;
            margin: 0 auto;
            display: flex; /* Added display flex */
            align-items: center; /* Align items vertically */
            justify-content: center; /* Center the image horizontally */
        }
        .profile-img img {
            max-width: 100%; /* Ensure the image is no wider than the container */
            max-height: 100%; /* Ensure the image is no taller than the container */
            height: auto; /* Maintain aspect ratio */
            width: auto; /* Maintain aspect ratio */
        }
        .account-settings .user-profile {
            margin-top: 20px;
            margin-bottom: 20px;
        }
        .account-settings .about {
            margin-top: 2rem;
            padding: 20px;
            background: #f8f9fa;
        }
        .card {
            border: none;
        }
        .card .card-header {
            background-color: #fff;
            border-bottom: none;
            padding: 3rem 2rem;
            border-bottom: 1px solid #e6e6f2;
            border-top-left-radius: .25rem;
            border-top-right-radius: .25rem;
        }
        .card-header:first-child {
            border-radius: calc(.25rem - 1px) calc(.25rem - 1px) 0 0;
        }
        .card .card-body {
            padding: 2rem;
            background: #f8f9fa;
        }
        .btn-primary {
            background-color: #007bff;
            border: none;
        }
        .btn-primary:hover {
            background-color: #0056b3;
        }
        .btn-link {
            font-weight: 600;
            color: #007bff;
        }
        .btn-link:hover {
            color: #0056b3;
            text-decoration: none;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand" href="/user/dashboard">Marketplace</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
            aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/user/marketplace">Marketplace</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/user/useraccount">My Account</a>
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0" method="post" action="/user/logout">
                <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Logout</button>
            </form>
        </div>
    </nav>

    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <div class="profile-img">
                            <% if (user.profilePicture) { %> 
                                 <img src="data:image/jpeg;base64, <%= user.profilePicture.toString('base64') %>" alt="Profile Picture">
                            <% } else { %>
                                <img src="https://via.placeholder.com/150" alt="Profile Picture">
                            <% } %>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="user-profile">
                            <h5 class="mb-2 text-primary"><%= user.firstName %> <%= user.lastName %></h5>
                            <p class="mb-1"><%= user.email %></p>
                            <p><%= user.city.name %></p>
                            <button class="btn btn-link" onclick="location.href='/user/savedListings'">View Saved Listings</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h4>Account Settings</h4>
                    </div>
                    
                    <div class="card-body">
                        <div class="row mb-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Full Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.firstName %> <%= user.lastName %>
                            </div>
                        </div>
                        <hr>
                        <div class="row mb-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.email %>
                            </div>
                        </div>
                        <hr>
                        <div class="row mb-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">City</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.city.name %>
                            </div>
                        </div>
                        <hr>
                        <div class="row mb-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Contact</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.contactNumber %>
                            </div>
                        </div>
                        <hr>
                        <div class="row mb-2">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Gender</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                <%= user.gender %>
                            </div>
                        </div>
                        <hr>
                        <!-- Add more fields as necessary -->
                    </div>
                </div>
                <!-- For Received Ratings -->
                <div class="card mt-4">
                    <div class="card-header">
                        <h4>Received Ratings</h4>
                    </div>
                    <div class="card-body">
                        <h5 class="mb-3">Average Rating: <%= averageReceivedRating.toFixed(2) %></h5>
                        <ul class="list-group list-group-flush">
                            <% user.receivedRatings.forEach(rating=> { %>
                                <li class="list-group-item">
                                    <strong>
                                        <%= rating.rater.firstName %> <%= rating.rater.lastName %>:
                                    </strong>
                                    <%= rating.value %> - <%= rating.comment || 'No comment' %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Load Bootstrap JS (you can also include jQuery for additional functionality) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>
